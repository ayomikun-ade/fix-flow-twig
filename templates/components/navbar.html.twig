<header class="w-full text-white bg-[#1d1d1d] shadow sticky top-0 z-20">
    <nav class="max-w-container mx-auto p-4 flex justify-between items-center gap-2">
        <a href="/" class="flex items-center gap-2">
            <img src="/public/images/workflow.svg" width="24" height="24" alt="FixFlow Logo">
            <h3 class="font-roboto font-bold text-3xl max-md:hidden">FixFlow</h3>
        </a>

        {% if is_authenticated %}
        <div class="flex items-center gap-4">
            <a href="/dashboard" class="hover:opacity-75 cursor-pointer text-sm {% if current_page == 'dashboard' %}font-medium underline underline-offset-4{% endif %}">
                Dashboard
            </a>
            <a href="/tickets" class="hover:opacity-75 cursor-pointer text-sm {% if current_page == 'tickets' %}font-medium underline underline-offset-4{% endif %}">
                Tickets
            </a>
            <form action="/logout" method="POST" class="inline">
                <button type="submit" class="inline-flex items-center justify-center gap-2 px-4 py-2 text-sm font-medium bg-secondary text-secondary-foreground rounded-md hover:opacity-90 transition-opacity">
                    <i data-lucide="log-out" class="w-4 h-4 max-md:hidden"></i>
                    Logout
                </button>
            </form>
        </div>
        {% else %}
        <a href="/signup" class="inline-flex items-center justify-center gap-2 px-4 py-2 text-sm font-medium bg-secondary text-secondary-foreground rounded-md hover:opacity-90 transition-opacity">
            Get Started
        </a>
        {% endif %}
    </nav>
</header>
